<h1>Listing dropdowns</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Value1</th>
    <th>Value2</th>
    <th>Value3</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dropdowns.each do |dropdown| %>
  <tr>
    <td><%= dropdown.title %></td>
    <td><%= dropdown.value1 %></td>
    <td><%= dropdown.value2 %></td>
    <td><%= dropdown.value3 %></td>
    <td><%= link_to 'Show', dropdown %></td>
    <td><%= link_to 'Edit', edit_dropdown_path(dropdown) %></td>
    <td><%= link_to 'Destroy', dropdown, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

