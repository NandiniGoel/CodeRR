<h1>Existing Buttons</h1>

<table>
  
<% @buttons.each do |button| %>
  <tr>
    &lt;a href="<%= @button.link %>; color: <%= @button.color %>;"&gt; &lt;button style="background-color: <%= @button.background %>; border: <%= @button.border %>px solid <%= @button.bordercolor %>; padding: <%= @button.padding %>px; color: <%= @button.color %>; border-radius: <%= @button.borderadius %>px;"&gt;<%= @button.text %>&lt;/a>&lt;/button&gt;

    
    <td><%= link_to 'Preview', button %></td>
    <td><%= link_to 'Edit', edit_button_path(button) %></td>
    <td><%= link_to 'Destroy', button, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create a New Button', new_button_path %>
