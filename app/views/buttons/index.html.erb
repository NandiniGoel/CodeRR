<div class="page-header">
  <h1>Existing Buttons</h1>
</div>

<% if user_signed_in? %>
<button style="background-color: green; border: 1px solid black; padding: 5px; color: white; border-radius: 3px;"><b><a href="http://limitless-ocean-5518.herokuapp.com/buttons/new" style="color: white;">Create A New Button</a></b></button>
<% else %>
   
  <% end %>

<% @buttons.each do |button| %>
<div class="button">
 
  <p>&lt;a href="<%= button.link %>" style="color: <%= button.color %>;"&gt; &lt;button style="background-color: <%= button.background %>; border: <%= button.border %>px solid <%= button.bordercolor %>; padding: <%= button.padding %>px; color: <%= button.color %>; border-radius: <%= button.borderadius %>px;"&gt;<%= button.text %>&lt;/a>&lt;/button&gt;</p>
  <div class="meta">
    <%= link_to time_ago_in_words(button.created_at) + " ago", button %> 
    <span class="admin">
      | <%= link_to "Edit", edit_button_path(button) %> | 
      <%= link_to "Delete", button, method: :delete, data: { confirm: "Are you sure your want to delete this button?"} %>
    </span>
  </div>
</div>
<% end %>



